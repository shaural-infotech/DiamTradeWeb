@section scripts{
    <script>
        $(document).ready(function () {
            BindServices();
            BindServiceType();
        });
        var imageurl = '@System.Configuration.ConfigurationManager.AppSettings["onlineimagelink"]';

        function BindServiceType() {
            $.ajax({
                type: "GET",
                url: "@Url.Action("BindServiceTypeD", "admin")",
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    //alert(JSON.stringify(response));
                    $("#DdlServiceType").html("");
                    //$("#DdlDepartment").append("<option value=0>Select Department</option>");
                    for (var i = 0; i < response.servicetype.length; i++) {
                        $("#DdlServiceType").append("<option value=" + response.servicetype[i].ServiceTypeID + ">" + response.servicetype[i].ServiceType + "</option>");
                    }
                    $("#DdlServiceType").select();
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        }
        var ServiceTypeID1;
        function BindServices() {
            $.ajax({
                type: "GET",
                 url: "@Url.Action("BindService", "admin")",
                data: "{}",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    //  alert(JSON.stringify(data));
                    if (data.success == true) {
                        var row = "";
                        var statusdisp = "";
                        $('#sample_1').DataTable().clear().destroy();
                        //alert(JSON.stringify(data.depart))
                        $.each(data.services, function (index, item) {
                          //  //debugger;
                            if (item.IsActive == "True") {
                                statusdisp = "Active";
                            }
                            else
                            {
                                statusdisp = "InActive";
                            }
                            //row += " <tr><td class='table-checkbox'><input type='checkbox'  class='group-checkable' value='1' /></td><td>" + item.ServiceTypeID + "</td><td>" + item.ServiceType + "</td><td>" + item.SortOrder + "</td><td>" + statusdisp + "</td><td onclick='return OPenConf(this);'><i class='fa fa-edit' style='color:green;font-size:larger;' data-toggle='modal' data-target='#portlet-config'>Edit</i></td></tr>"
                            row += " <tr><td class='table-checkbox'><input type='checkbox' id='chkservice' class='group-checkable' value=" + item.ServiceID + " /></td><td>" + item.ServiceID + "</td><td>" + item.ServiceTypeName + "</td><td>" + item.ServiceName + "</td><td>" + item.SortOrder + "</td><td>" + statusdisp + "</td><td onclick='return OPenConf(this);'><i class='fa fa-edit btn default btn-xs green' data-toggle='modal' data-target='#portlet-config'>Edit</i></td></tr>"
                            
                        })
                        $("#TBService").html(row);

                        $('#sample_1').DataTable({
                            'paging': true,
                            'lengthChange': true,
                            'searching': true,
                            'ordering': true,
                            'info': true,
                            'autoWidth': false
                        })
                    }
                    else {
                        $("#TBService").html("");
                    }
                },
                fail: function (msg) {
                    alert(msg);
                }
            })
        }

        function AddServiceType() {

            if ($("#BtnSave").html() == "Save") {
                var ddlstat = $("#DdlStatus").val();
                if (ddlstat == "Active") {
                    ddlstat = 1;
                }
                else {
                    ddlstat = 0;
                }
                var dataobj = JSON.stringify({
                    'ServiceTypeID': $("#DdlServiceType").val(),
                    'ServiceName': $("#TxtServiceName").val(),
                    'SortOrder': $("#TxtSortOrder").val(),
                    'IsActive': ddlstat
                });
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("InsertServices", "admin")",
                    data: dataobj,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (response) {
                        if (response.success == "false") {
                            //alert(response.msg);
                            swal({
                                title: "Warning!",
                                text: response.msg,
                                //text: "Please enter Department!",
                                type: "warning",
                                confirmButtonText: "Close",
                                //html: true,
                                icon: "warning",
                                closeOnConfirm: false, //It does close the popup when I click on close button
                                closeOnCancel: false,
                                closeOnClickOutside: false,
                                closeOnEsc: false
                            })
                                //.then((willDelete) => {
                                //    if (willDelete) {
                                //        $("#TxtServiceType").focus();
                                //    }
                                //});
                        }
                        else {
                            swal({
                                title: "success!",
                                text: response.msg,
                                //text: "Please enter Department!",
                                type: "success",
                                confirmButtonText: "Close",
                                //html: true,
                                icon: "success",
                                closeOnConfirm: false, //It does close the popup when I click on close button
                                closeOnCancel: false,
                                closeOnClickOutside: false,
                                closeOnEsc: false
                            });


                            $("#portlet-config").modal('hide');
                            BindServices();
                        }
                        //msgDisplay();
                        ClearControll();
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        //alert(response.responseText);
                        swal({
                            title: "error!",
                            text: response.responseText,
                            //text: "Please enter Department!",
                            type: "error",
                            confirmButtonText: "Close",
                            //html: true,
                            icon: "error",
                            closeOnConfirm: false, //It does close the popup when I click on close button
                            closeOnCancel: false,
                            closeOnClickOutside: false,
                            closeOnEsc: false
                        });
                    }
                });
            }
            else {
                var ddlstat = $("#DdlStatus").val();
                if (ddlstat == "Active") {
                    ddlstat = 1;
                }
                else {
                    ddlstat = 0;
                }
                var dataobj = JSON.stringify({
                    'ServiceID': ServiceTypeID1,
                    'ServiceTypeID': $("#DdlServiceType").val(),
                    'ServiceName': $("#TxtServiceName").val(),
                    'SortOrder': $("#TxtSortOrder").val(),
                    'IsActive': ddlstat
                });
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateServices", "admin")",
                    data: dataobj,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (response) {
                        //alert(JSON.stringify(response))
                        if (response.success == "false") {
                            // alert(response.msg);
                            swal({
                                title: "Warning!",
                                text: response.msg,
                                //text: "Please enter Department!",
                                type: "warning",
                                confirmButtonText: "Close",
                                //html: true,
                                icon: "warning",
                                closeOnConfirm: false, //It does close the popup when I click on close button
                                closeOnCancel: false,
                                closeOnClickOutside: false,
                                closeOnEsc: false
                            });
                        }
                        else {
                            //alert(response.msg);
                            swal({
                                title: "success!",
                                text: response.msg,
                                //text: "Please enter Department!",
                                type: "success",
                                confirmButtonText: "Close",
                                //html: true,
                                icon: "success",
                                closeOnConfirm: false, //It does close the popup when I click on close button
                                closeOnCancel: false,
                                closeOnClickOutside: false,
                                closeOnEsc: false
                            });
                            $("#portlet-config").modal('hide');
                            BindServices();
                        }
                        ClearControll();
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        // alert(response.responseText);
                        swal({
                            title: "error!",
                            text: response.responseText,
                            //text: "Please enter Department!",
                            type: "error",
                            confirmButtonText: "Close",
                            //html: true,
                            icon: "error",
                            closeOnConfirm: false, //It does close the popup when I click on close button
                            closeOnCancel: false,
                            closeOnClickOutside: false,
                            closeOnEsc: false
                        });
                    }
                });
            }
        }

        function ClearControll() {
            $("#TxtServiceName").val('').trigger('change');
            $("#TxtSortOrder").val('').trigger('change');
            $("#DdlStatus").val('-- Select --');
            $("#DdlServiceType").val('-- Select --');
            $("#BtnSave").html("Save");
            $("#H4PageTitle").html("Add Service Type");
        }

        function validateform() {

            var servicetype = $("#DdlServiceType").val();
            var servicename = $("#TxtServiceName").val();
            var sortorder = $("#TxtSortOrder").val();
            var status = $("#DdlStatus").val();

            if (servicetype == null || servicetype == "" || servicetype == "-- Select --" || servicetype == "0") {

                swal({
                    title: "Warning!",
                    text: "Service Type can't be blank",
                    type: "warning",
                    confirmButtonText: "Close",
                    icon: "warning",
                    closeOnConfirm: false, //It does close the popup when I click on close button
                    closeOnCancel: false,
                    closeOnClickOutside: false,
                    closeOnEsc: false
                })
                    
                return false;
            }
            else if (servicename == null || servicename == "") {
                swal({
                    title: "Warning!",
                    text: "Service Name can't be blank.",
                    type: "warning",
                    confirmButtonText: "Close",
                    icon: "warning",
                    closeOnConfirm: false, //It does close the popup when I click on close button
                    closeOnCancel: false,
                    closeOnClickOutside: false,
                    closeOnEsc: false
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            $("#TxtServiceName").focus();
                        }
                    });
                return false;
            }
            else if (sortorder == null || sortorder == "") {
                swal({
                    title: "Warning!",
                    text: "Sort Order can't be blank.",
                    type: "warning",
                    confirmButtonText: "Close",
                    icon: "warning",
                    closeOnConfirm: false, //It does close the popup when I click on close button
                    closeOnCancel: false,
                    closeOnClickOutside: false,
                    closeOnEsc: false
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            $("#TxtSortOrder").focus();
                        }
                    });
                return false;
            }

            else if (status == null || status == "" || status == "-- Select --" || status == "0") {
                swal({
                    title: "Warning!",
                    text: "Status can't be blank.",
                    type: "warning",
                    confirmButtonText: "Close",
                    icon: "warning",
                    closeOnConfirm: false, //It does close the popup when I click on close button
                    closeOnCancel: false,
                    closeOnClickOutside: false,
                    closeOnEsc: false
                });
                return false;
            }
            else {
                AddServiceType();
            }
        }

        function OPenConf(ServiceTypeID) {
            var row = $(ServiceTypeID).closest("TR");
            var ServiceTypeID = $("TD", row).eq(1).html();
            ServiceTypeID1 = ServiceTypeID;
            EditServiceType(ServiceTypeID);
        }

        function EditServiceType(ServiceTypeID) {
            $.ajax({
                type: "GET",
                data: { 'ServiceID': ServiceTypeID },
                url: "@Url.Action("EditService", "admin")",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    ClearControll();
                    //alert(JSON.stringify(response));
                    $("#DdlServiceType").val(response.servicetype[0].ServiceTypeID).trigger('change');
                    $("#TxtServiceName").val(response.servicetype[0].ServiceName).trigger('change');
                    $("#TxtSortOrder").val(response.servicetype[0].SortOrder).trigger('change');

                    if (response.servicetype[0].IsActive == "True") {
                        $("#DdlStatus").val('Active').trigger('change');
                    }
                    else {
                        $("#DdlStatus").val('InActive').trigger('change');
                    }

                    $("#BtnSave").html("Update");
                    $("#H4PageTitle").html("Edit Service");
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    swal({
                        title: "error!",
                        text: response.responseText,
                        //text: "Please enter Department!",
                        type: "error",
                        confirmButtonText: "Close",
                        //html: true,
                        icon: "error",
                        closeOnConfirm: false, //It does close the popup when I click on close button
                        closeOnCancel: false,
                        closeOnClickOutside: false,
                        closeOnEsc: false
                    });
                }
            });
        }

        function DelServiceF(DelServiceID) {
            var dataobj = JSON.stringify({
                'ServiceID': DelServiceID
            });
            $.ajax({
                type: "POST",
                url: "@Url.Action("DeleteService", "admin")",
                data: dataobj,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response.success == "false") {
                        //alert(response.msg);
                        swal({
                            title: "Warning!",
                            text: response.msg,
                            //text: "Please enter Department!",
                            type: "warning",
                            confirmButtonText: "Close",
                            //html: true,
                            icon: "warning",
                            closeOnConfirm: false, //It does close the popup when I click on close button
                            closeOnCancel: false,
                            closeOnClickOutside: false,
                            closeOnEsc: false
                        });
                    }
                    else {
                        //alert(response.msg);
                        swal({
                            title: "success!",
                            text: response.msg,
                            //text: "Please enter Department!",
                            type: "success",
                            confirmButtonText: "Close",
                            //html: true,
                            icon: "success",
                            closeOnConfirm: false, //It does close the popup when I click on close button
                            closeOnCancel: false,
                            closeOnClickOutside: false,
                            closeOnEsc: false
                        });
                        $("#modal-default").modal('hide');
                        BindServices();
                        ClearControll();
                    }
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    //alert(response.responseText);
                    swal({
                        title: "error!",
                        text: response.responseText,
                        //text: "Please enter Department!",
                        type: "error",
                        confirmButtonText: "Close",
                        //html: true,
                        icon: "error",
                        closeOnConfirm: false, //It does close the popup when I click on close button
                        closeOnCancel: false,
                        closeOnClickOutside: false,
                        closeOnEsc: false
                    });
                }
            });
        }
        function DelService() {
            swal({
                title: "Are you sure you want to delete this Record?",
                text: "Once deleted, you will not be able to recover this Record!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
                closeOnConfirm: false, //It does close the popup when I click on close button
                closeOnCancel: false,
                closeOnClickOutside: false,
                closeOnEsc: false
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $('#sample_1').find('input[type="checkbox"]:checked').each(function () {
                            var DelServiceID = $(this).val();
                            DelServiceF(DelServiceID);
                            //this is the current checkbox
                            //var DelCareerID = $(this).val();
                        });
                        
                    } else {
                        swal("Your Record is safe!");
                    }
                });
        }
        
        var specialKeys = new Array();
        specialKeys.push(8); //Backspace

        function IsNumeric(e) {
            var keyCode = e.which ? e.which : e.keyCode
            var ret = ((keyCode >= 48 && keyCode <= 57) || specialKeys.indexOf(keyCode) != -1);
            //document.getElementById("error").style.display = ret ? "none" : "inline";
            return ret;
        }
    </script>
}


