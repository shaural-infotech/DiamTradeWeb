@section scripts{
    <script>
        $(document).ready(function () {
            BindOurClient();
            $("#DivTestimAdd2").css("display", "none");
        });
         var imageurl = '@System.Configuration.ConfigurationManager.AppSettings["onlineimagelink"]';

        function ViewAddPage() {
            $("#DivTestimAdd2").css("display", "block");
            $("#DivViewTest").css("display", "none");
        }

        var OurClientID1;
        function BindOurClient() {
            $.ajax({
                type: "GET",
                 url: "@Url.Action("BindClientImage", "admin")",
                data: "{}",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    //  alert(JSON.stringify(data));
                    if (data.success == true) {
                        var row = "";
                        var statusdisp = "";
                        $('#sample_1').DataTable().clear().destroy();
                        //alert(JSON.stringify(data.depart))
                        $.each(data.ourclient, function (index, item) {
                          //  //debugger;
                            if (item.IsActive == "True") {
                                statusdisp = "Active";
                            }
                            else
                            {
                                statusdisp = "InActive";
                            }
                            row += " <tr><td class='table-checkbox'><input type='checkbox' id='chkcareer' class='group-checkable' value=" + item.ClientImageID + " /></td><td>" + item.ClientImageID +  "</td><td><img width='50' src=" + imageurl+item.ClientImage +  "></td><td>" + item.SortOrder + "</td><td>" + statusdisp + "</td><td onclick='return OPenConf(this);'><i class='fa fa-edit btn default btn-xs green'>Edit</i></td></tr>"

                        })
                        $("#TBService").html(row);

                        $('#sample_1').DataTable({
                            'paging': true,
                            'lengthChange': true,
                            'searching': true,
                            'ordering': true,
                            'info': true,
                            'autoWidth': false
                        })
                    }
                    else {
                        $("#TBService").html("");
                    }
                },
                fail: function (msg) {
                    alert(msg);
                }
            })
        }

        function AddOurClient() {

            if ($("#BtnSave").html() == "Save") {
                var ddlstat = $("#DdlStatus").val();
                if (ddlstat == "Active") {
                    ddlstat = 1;
                }
                else {
                    ddlstat = 0;
                }
                var dataobj = JSON.stringify({
                    'SortOrder': $("#TxtSortOrder").val(),
                    'IsActive': ddlstat
                });
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("InsertClientImage", "admin")",
                    data: dataobj,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (response) {
                        if (response.success == "false") {
                            //alert(response.msg);
                            swal({
                                title: "Warning!",
                                text: response.msg,
                                //text: "Please enter Department!",
                                type: "warning",
                                confirmButtonText: "Close",
                                //html: true,
                                icon: "warning",
                                closeOnConfirm: false, //It does close the popup when I click on close button
                                closeOnCancel: false,
                                closeOnClickOutside: false,
                                closeOnEsc: false
                            })
                                //.then((willDelete) => {
                                //    if (willDelete) {
                                //        $("#TxtServiceType").focus();
                                //    }
                                //});
                        }
                        else {
                            SaveImages2();
                            swal({
                                title: "success!",
                                text: response.msg,
                                //text: "Please enter Department!",
                                type: "success",
                                confirmButtonText: "Close",
                                //html: true,
                                icon: "success",
                                closeOnConfirm: false, //It does close the popup when I click on close button
                                closeOnCancel: false,
                                closeOnClickOutside: false,
                                closeOnEsc: false
                            });
                            $("#DivTestimAdd2").css("display", "none");
                            $("#DivViewTest").css("display", "block");
                           // $("#portlet-config").modal('hide');
                            BindOurClient();
                        }
                        //msgDisplay();
                        ClearControll();
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        //alert(response.responseText);
                        swal({
                            title: "error!",
                            text: response.responseText,
                            //text: "Please enter Department!",
                            type: "error",
                            confirmButtonText: "Close",
                            //html: true,
                            icon: "error",
                            closeOnConfirm: false, //It does close the popup when I click on close button
                            closeOnCancel: false,
                            closeOnClickOutside: false,
                            closeOnEsc: false
                        });
                    }
                });
            }
            else {
                var ddlstat = $("#DdlStatus").val();
                if (ddlstat == "Active") {
                    ddlstat = 1;
                }
                else {
                    ddlstat = 0;
                }
                var dataobj = JSON.stringify({
                    'ClientImageID': OurClientID1,
                    'SortOrder': $("#TxtSortOrder").val(),
                    'IsActive': ddlstat
                });
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateClientImage", "admin")",
                    data: dataobj,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (response) {
                        //alert(JSON.stringify(response))
                        if (response.success == "false") {
                            // alert(response.msg);
                            swal({
                                title: "Warning!",
                                text: response.msg,
                                //text: "Please enter Department!",
                                type: "warning",
                                confirmButtonText: "Close",
                                //html: true,
                                icon: "warning",
                                closeOnConfirm: false, //It does close the popup when I click on close button
                                closeOnCancel: false,
                                closeOnClickOutside: false,
                                closeOnEsc: false
                            });
                        }
                        else {
                            SaveImages2();
                            //alert(response.msg);
                            swal({
                                title: "success!",
                                text: response.msg,
                                //text: "Please enter Department!",
                                type: "success",
                                confirmButtonText: "Close",
                                //html: true,
                                icon: "success",
                                closeOnConfirm: false, //It does close the popup when I click on close button
                                closeOnCancel: false,
                                closeOnClickOutside: false,
                                closeOnEsc: false
                            });
                          //  $("#portlet-config").modal('hide');
                            BindOurClient();
                        }
                        ClearControll();
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        // alert(response.responseText);
                        swal({
                            title: "error!",
                            text: response.responseText,
                            //text: "Please enter Department!",
                            type: "error",
                            confirmButtonText: "Close",
                            //html: true,
                            icon: "error",
                            closeOnConfirm: false, //It does close the popup when I click on close button
                            closeOnCancel: false,
                            closeOnClickOutside: false,
                            closeOnEsc: false
                        });
                    }
                });
            }
        }

        function ClearControll() {
           
            $("#TxtSortOrder").val('').trigger('change');
            $("#DdlStatus").val('-- Select --');
            $("#BtnSave").html("Save");
            $("#AnchAddTestim").html("Add");
            $("#HeadAddTest").html("Add Product");
            $("#exampleInputFile").val('').trigger('change');
            $("#prodimage").attr("src", "");
        }

        function validateform() {
            var sortorder = $("#TxtSortOrder").val();
            var status = $("#DdlStatus").val();
            var prodiamge = $("#exampleInputFile").val();
            
             if (sortorder == null || sortorder == "") {
                swal({
                    title: "Warning!",
                    text: "Sort Order can't be blank.",
                    type: "warning",
                    confirmButtonText: "Close",
                    icon: "warning",
                    closeOnConfirm: false, //It does close the popup when I click on close button
                    closeOnCancel: false,
                    closeOnClickOutside: false,
                    closeOnEsc: false
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            $("#TxtSortOrder").focus();
                        }
                    });
                return false;
            }

            else if (status == null || status == "" || status == "-- Select --" || status == "0") {
                swal({
                    title: "Warning!",
                    text: "Status can't be blank.",
                    type: "warning",
                    confirmButtonText: "Close",
                    icon: "warning",
                    closeOnConfirm: false, //It does close the popup when I click on close button
                    closeOnCancel: false,
                    closeOnClickOutside: false,
                    closeOnEsc: false
                });
                return false;
            }
           
            else if (prodiamge == null || prodiamge == "") {

                swal({
                    title: "Warning!",
                    text: "Product Image can't be blank",
                    type: "warning",
                    confirmButtonText: "Close",
                    icon: "warning",
                    closeOnConfirm: false, //It does close the popup when I click on close button
                    closeOnCancel: false,
                    closeOnClickOutside: false,
                    closeOnEsc: false
                })
                return false;
            }
            
             else {
                 AddOurClient();
            }
        }

        function OPenConf(OurClientID) {
            var row = $(OurClientID).closest("TR");
            var OurClientID = $("TD", row).eq(1).html();
            OurClientID1 = OurClientID;
            EditOurClient(OurClientID);
        }
        function ChangeTextWhenEdit() {
            $("#AnchAddTestim").html("Edit");
            $("#HeadAddTest").html("Edit Product");
        }

        function EditOurClient(OurClientID) {
            $.ajax({
                type: "GET",
                data: { 'ClientImageID': OurClientID },
                url: "@Url.Action("EditClientImage", "admin")",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    ClearControll();
                    ViewAddPage();
                    ChangeTextWhenEdit();
                    $("#TxtSortOrder").val(response.ourclient[0].SortOrder).trigger('change');
                    if (response.ourclient[0].IsActive == "True") {
                        $("#DdlStatus").val('Active').trigger('change');
                    }
                    else {
                        $("#DdlStatus").val('InActive').trigger('change');
                    }

                    $("#BtnSave").html("Update");
                    var imgg = response.ourclient[0].ClientImage;
                    //alert("img=>" + imgg);
                    //var img2 ="~/images/img-1.jpg";
                    //$("#exampleInputFile").val(imgg);
                    $("#prodimage").attr("src", imageurl+imgg);
                    //$("#H4PageTitle").html("Edit Service Type");
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    swal({
                        title: "error!",
                        text: response.responseText,
                        //text: "Please enter Department!",
                        type: "error",
                        confirmButtonText: "Close",
                        //html: true,
                        icon: "error",
                        closeOnConfirm: false, //It does close the popup when I click on close button
                        closeOnCancel: false,
                        closeOnClickOutside: false,
                        closeOnEsc: false
                    });
                }
            });
        }

        function DelOurClientF(DelOurClientID) {
            var dataobj = JSON.stringify({
                'ClientImageID': DelOurClientID
            });
            $.ajax({
                type: "POST",
                url: "@Url.Action("DeleteClientImage", "admin")",
                data: dataobj,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response.success == "false") {
                        //alert(response.msg);
                        swal({
                            title: "Warning!",
                            text: response.msg,
                            //text: "Please enter Department!",
                            type: "warning",
                            confirmButtonText: "Close",
                            //html: true,
                            icon: "warning",
                            closeOnConfirm: false, //It does close the popup when I click on close button
                            closeOnCancel: false,
                            closeOnClickOutside: false,
                            closeOnEsc: false
                        });
                    }
                    else {
                        //alert(response.msg);
                        swal({
                            title: "success!",
                            text: response.msg,
                            //text: "Please enter Department!",
                            type: "success",
                            confirmButtonText: "Close",
                            //html: true,
                            icon: "success",
                            closeOnConfirm: false, //It does close the popup when I click on close button
                            closeOnCancel: false,
                            closeOnClickOutside: false,
                            closeOnEsc: false
                        });
                        $("#modal-default").modal('hide');
                        BindOurClient();
                        ClearControll();
                    }
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    //alert(response.responseText);
                    swal({
                        title: "error!",
                        text: response.responseText,
                        //text: "Please enter Department!",
                        type: "error",
                        confirmButtonText: "Close",
                        //html: true,
                        icon: "error",
                        closeOnConfirm: false, //It does close the popup when I click on close button
                        closeOnCancel: false,
                        closeOnClickOutside: false,
                        closeOnEsc: false
                    });
                }
            });
        }
        function DelProducts() {
            swal({
                title: "Are you sure you want to delete this Record?",
                text: "Once deleted, you will not be able to recover this Record!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
                closeOnConfirm: false, //It does close the popup when I click on close button
                closeOnCancel: false,
                closeOnClickOutside: false,
                closeOnEsc: false
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $('#sample_1').find('input[type="checkbox"]:checked').each(function () {
                            var DelOurClientID = $(this).val();
                            DelOurClientF(DelOurClientID);
                            //this is the current checkbox
                            //var DelCareerID = $(this).val();
                        });

                    } else {
                        swal("Your Record is safe!");
                    }
                });
        }


        var specialKeys = new Array();
        specialKeys.push(8); //Backspace

        function IsNumeric(e) {
            var keyCode = e.which ? e.which : e.keyCode
            var ret = ((keyCode >= 48 && keyCode <= 57) || specialKeys.indexOf(keyCode) != -1);
            //document.getElementById("error").style.display = ret ? "none" : "inline";
            return ret;
        }

        function validateImage() {
            // //debugger;
            var formData = new FormData();

            var file = document.getElementById("exampleInputFile").files[0];

            if (file != "" && file != undefined) {
                formData.append("Filedata", file);
                var t = file.type.split('/').pop().toLowerCase();
                if (t != "jpeg" && t != "jpg" && t != "png" && t != "bmp" && t != "gif") {
                    //alert('Please select a valid image file');
                    swal({
                        title: "Warning!",
                        text: "Please select a valid image file!",
                        //text: "Please select a valid image file!",
                        type: "warning",
                        confirmButtonText: "Close",
                        //html: true,
                        icon: "warning",
                        closeOnConfirm: false, //It does close the popup when I click on close button
                        closeOnCancel: false,
                        closeOnClickOutside: false,
                        closeOnEsc: false
                    });
                    document.getElementById("exampleInputFile").value = '';
                    return false;
                }
                if (file.size > 1024000) {
                    //alert('Max Upload size is 1MB only');
                    swal({
                        title: "Warning!",
                        text: "Max Upload size is 1MB only!",
                        //text: "Max Upload size is 1MB only!",
                        type: "warning",
                        confirmButtonText: "Close",
                        //html: true,
                        icon: "warning",
                        closeOnConfirm: false, //It does close the popup when I click on close button
                        closeOnCancel: false,
                        closeOnClickOutside: false,
                        closeOnEsc: false
                    });
                    document.getElementById("exampleInputFile").value = '';
                    return false;
                }
                return true;
            }
        }
        function SaveImages2() {
            var formData = new FormData();
            var file = $('#exampleInputFile')[0];
            formData.append('file', file.files[0]);
            $.ajax({
                //url: serviceurl + "Postnew",
                 url: "@Url.Action("FileUpload", "admin")",
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (d) {
                    BindOurClient();
                },
                error: function () {
                    BindOurClient();
                }
            });
            BindOurClient();
        }
    </script>
}

